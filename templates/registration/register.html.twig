{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container col-md-3 border rounded mt-4">
    <h1>Cr√©er un compte</h1>

    {{ form_start(registrationForm) }}
        {{ form_errors(registrationForm) }}
        <div class="mt-3">
            {{ form_label(registrationForm.username, 'Pseudo') }}
            {{ form_errors(registrationForm.username) }}
            {{ form_widget(registrationForm.username) }}
            {{ form_help(registrationForm.username) }}
        </div>
        <div class="mt-3">{{ form_row(registrationForm.email) }}</div>
        <div class="mt-3">
            {{ form_label(registrationForm.birthdate, 'Date de naissance') }}
            {{ form_errors(registrationForm.birthdate) }}
            {{ form_widget(registrationForm.birthdate) }}
            {{ form_help(registrationForm.birthdate) }}
        </div>
        <div class="mt-3">{{ form_row(registrationForm.plainPassword) }}</div>



        <button class="btn btn-secondary mt-4 mb-3">Enregistrer</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}

