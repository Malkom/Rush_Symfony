{% extends 'base.html.twig' %}

{% block title %}Prochaines sorties{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="font-weight-bold text-center mt-4">Les Prochaines sorties</h1>
            <div class="row mt-4">
                {% for movie in movies.results|slice(0,8) %}
                    <div class="col-lg-3 col-md-6 d-flex">
                        <div class="card border-dark mb-3 bg-light">
                                <img src="http://image.tmdb.org/t/p/w500{{ movie.poster_path }}" class="card-img-top h-50" alt="...">
                            <span class="badge badge-pill badge-warning mt-1 ml-1 mr-1">Note : {{ movie.vote_average }} / 10</span>
                                <div class="card-body h-100">
                                    <h5 class="card-title font-italic text-uppercase font-weight-bold">{{ movie.title }}</h5>
                                    <h6 class="card-text mb-4">{{ movie.overview|slice(0,100) }}...</h6>
                                    <p class="text-left font-italic">Date de sortie : {{ movie.release_date|date('d/m/Y') }}</p>
                                </div>
                            <a class="btn btn-secondary mb-1 ml-2 align-self-start d-flex" href="{{ path('movie', { 'id': movie.id }) }}">DÃ©tails</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
    </div>

{% endblock %}
