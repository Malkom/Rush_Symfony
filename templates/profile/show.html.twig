{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}
    <div class="container w-50 mt-3 border col">
        <h1>Profil de {{ user.username }}</h1>

        <table class="table mt-3 row">
            <tbody>
            <tr>
                <th style="width:200px;">Utilisateur n° : </th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email : </th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Rôles : </th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Pseudo : </th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Date de naissance : </th>
                <td>{{ user.birthdate ? user.birthdate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Description : </th>
                <td>{{ user.description }}</td>
            </tr>
            <tr>
                <th>Créé le : </th>
                <td>{{ user.createdAt ? user.createdAt|date('d-m-Y') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mb-3">
            <a class="btn btn-secondary" href="{{ path('profile_edit', {'id': user.id}) }}">Edition</a>

            {{ include('profile/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
