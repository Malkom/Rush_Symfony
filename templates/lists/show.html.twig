{% extends 'base.html.twig' %}

{% block title %}Lists{% endblock %}

{% block body %}
<div class="container w-50 mt-3 border">
    <h1>Lists</h1>

    <table class="table mt-3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ list.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ list.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ list.description }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ list.authorId.username}}</td>
            </tr>
            <tr>
                <th>Partage</th>
                <td>{{ list.partage ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between mb-3">
        <a class="btn btn-secondary" href="{{ path('lists_edit', {'id': list.id}) }}">Edition</a>
        <a class="btn btn-dark" href="{{ path('user_lists', {'id': app.user.id}) }}">Retour Ã  la liste</a>

        {{ include('lists/_delete_form.html.twig') }}
    </div>

{% endblock %}
